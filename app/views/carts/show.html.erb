<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>It's Your Shopping Cart!</h2>
<table>
  <% @cart.line_items.each do |item| %>
    <tr>
       <td><%= item.quantity %>&times;</td>
       <td><%= item.product.title %></td>
       <td class="item_price"><%= number_to_currency(item.total_price, :unit => "£") %></td> 
       <td><%= button_to 'Remove line item', item, method: :delete, data: { confirm: 'Are you sure you want to delete this line item?' } %></td>
    </tr>
  <% end %>
 
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price, :unit => "£") %></td>
  </tr>
</table>

<%= button_to 'Put everything back!', @cart, method: :delete,
    data: { confirm: 'Are you sure?' } %>
